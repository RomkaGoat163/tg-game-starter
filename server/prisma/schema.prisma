generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Pooler (IPv4)
  directUrl = env("DIRECT_URL")    // Прямое подключение для миграций/транзакций
}

model User {
  id          String   @id @default(cuid())
  telegramId  String   @unique
  username    String?
  createdAt   DateTime @default(now())
  banned      Boolean  @default(false)
  Wallet      Wallet?
}

model Wallet {
  userId  String @id
  balance Int    @default(0)
  user    User   @relation(fields: [userId], references: [id])
}
